{
    "extends": [
        "eslint:recommended",
        "google"
    ],
    "plugins": ["mocha"],
    "env": {
        "es6": true,
        "node": true,
        "mocha": true
    },
    "parserOptions": {
        "ecmaVersion": 8
    },
    "rules": {
        "switch-colon-spacing": ["off"],
        "no-undef": ["warn"],
        "no-unused-vars": ["warn"],
        "no-unused-expressions": ["off"],
        "no-global-assign": ["warn"],
        "require-jsdoc":["off"],
        "strict": [2, "never"],
        "comma-dangle": [ "error", "never" ],
        "max-len": [ "error", 120 ],
        "no-console": [ "off" ],
        "indent": [ "error", 4, { "SwitchCase": 1 }],
        "linebreak-style": [ "off" ]
    }
}
